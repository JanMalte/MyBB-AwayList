<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <parser>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
            <extension>php4</extension>
            <extension>php5</extension>
            <extension>phtml</extension>
        </extensions>
        <visibility></visibility>
    </parser>
    <files>
        <directory>source</directory>
        <directory>tests</directory>
        <directory>tests-selenium</directory>
    </files>
    <transformer>
        <external-class-documentation>
            <prefix>Zend</prefix>
            <uri>http://framework.zend.com/</uri>
        </external-class-documentation>
    </transformer>
    <logging>
        <level>notice</level>
        <paths>
            <default>{APP_ROOT}/data/log/{DATE}.log</default>
            <errors>{APP_ROOT}/data/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="mybb-phpdoc" />
    </transformations>
</phpdocumentor>